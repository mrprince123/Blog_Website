<%- include('partials/header') %>

    <div class="register">


        <div class="local-register">
            <img src="https://cdn.pixabay.com/photo/2019/10/09/07/28/development-4536630_960_720.png" alt="">
            <form action="/register" method="POST">
                <div class="form-group">
                    <label for="email">Name</label>
                    <input placeholder="Enter your name" required="true" type="text" class="form-control" name="name">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input placeholder="Enter your email " required="true" type="email" class="form-control" name="username">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input placeholder="Enter your password" required="true" type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-dark">Register</button>
            </form>

            <h4>or</h4>
            <a class="google-button-link" href="/auth/google">
                <button>Signup with Google</button>
            </a>
        </div>

    </div>


    <%- include('partials/footer') %>